<div class="container mt-5">
  <h2 class="mb-4">Tell others about your event!</h2>
  <form class="new-post-form">
    <div class="mb-3">
      <label for="title-new-post" class="form-label">Event Title:</label>
      <input
        type="text"
        class="form-control"
        id="title-new-post"
        placeholder="Enter a title for your event"
      />
    </div>

     <div class="mb-3">
      <label for="venue-new-post" class="form-label">Event Venue:</label>
      <input
        type="text"
        class="form-control"
        id="venue-new-post"
        placeholder="Enter the venue for your event"
      />
    </div>

    <div class="mb-3">
      <label for="date-new-post" class="form-label">Event Date:</label>
      <input
        type="date"
        class="form-control"
        id="date-new-post"
        placeholder="Enter the date of your event"
      />
    </div>

    <div class="mb-3">
      <label for="time-new-post" class="form-label">Event Time:</label>
      <input
        type="time"
        class="form-control"
        id="time-new-post"
      />
    </div>
    
    <div class="mb-3">
      <label for="deatils-new-post" class="form-label"> Details:</label>
      <textarea
        class="form-control"
        id="details-new-post"
        rows="5"
        placeholder="Enter event details here"
      ></textarea>
    </div>


